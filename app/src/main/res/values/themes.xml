<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StiveWorkoutApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Override Material3 colors -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorOnPrimary">@color/on_my_primary</item>
        <item name="colorPrimaryContainer">@color/my_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_my_primary</item>

        <!-- Optional: button background override -->
    </style>

    <style name="Theme.StiveWorkoutApp" parent="Base.Theme.StiveWorkoutApp" />
    <style name="BottomNav.NoRipple" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="android:foreground">@null</item>
        <item name="android:stateListAnimator">@null</item> <!-- removes elevation animation -->
    </style>

</resources>